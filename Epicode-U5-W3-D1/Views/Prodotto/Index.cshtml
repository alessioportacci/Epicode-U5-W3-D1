@model IEnumerable<Epicode_U5_W3_D1.Models.Db_Models.T_Prodotto>

@{
    ViewBag.Title = "Index";
}

<div class="d-flex align-items-center mb-4 text-white">
    <h2 class="d-inline">Le nostre pizze</h2>

    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("➕", "Create", new { }, new { @class = "btn btn-outline-light mx-3" })
    }

    <hr class="text-white"/>
</div>


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    @foreach (var item in Model)
    {
        <div>
            <div class="card mt-5" style="width: 19rem;">
                <img class="card-img-top card-image" src="~/Content/Img/@item.Img" alt="Card image cap" height="235">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">@item.Costo.Value.ToString("C")</p>
                    <div class="row row-cols-3">
                        <div>
                            @Html.ActionLink("Dettagli", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                        </div>
                        @if (User.IsInRole("admin"))
                        {
                            <div>
                                @Html.ActionLink("Modifica", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            </div>
                            <div>
                                @Html.ActionLink("Cancella", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>