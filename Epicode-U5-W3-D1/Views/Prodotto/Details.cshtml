@model Epicode_U5_W3_D1.Models.Db_Models.T_Prodotto

@{
    ViewBag.Title = "Details";
}

<div class="text-white">
    <h2> Aggiungi una @Model.Nome al carrello</h2>
    <hr />
</div>


<div class="row row-cols-1 row-cols-md-2 justify-content-center align-items-center">

    <div>
        <img class="rounded border-1" src="~/Content/Img/@Model.Img" height="300" />
    </div>

    <div class="text-white">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Costo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Costo)€
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ingredienti)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ingredienti)
            </dd>

        </dl>
    </div>


</div>

<div class="mt-5 text-white">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.TextBox("FkProdotto", Model.Id, new { @class = "d-none", @type = "number" })

        @Html.Label("Indirizzo", "Inserisci un indirizzo")
        @Html.TextBox("Indirizzo", "", new { @name = "Indirizzo", @class = "form-control my-2", @placeholder = "Inserisci indirizzo" })

        @Html.Label("Note", "Inserisci una nota")
        @Html.TextBox("Note", "", new { @name = "Note", @class = "form-control  my-2", @placeholder = "Aggiungi delle note" })

        @Html.Label("Quantita", "Quante?")
        @Html.DropDownList("quantita", Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), new { @name="Quantita" ,@class = "form-control  my-2" })

        <input type="submit" value="Aggiungi al carrello" class="btn btn-outline-light" />
    }

</div>
